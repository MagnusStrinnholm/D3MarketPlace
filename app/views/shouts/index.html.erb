<div class="page-header">
	<h1>ShoutBox</h1>
</div>

<% if user_signed_in? %>
<%= link_to "Create new shout", new_shout_path, class: "btn" %>
<% end %>

<% @shouts.each do |shout| %>
<div class="shout">
	<div class="row">
		<div class="span1">
			<!-- DUMMY AVATAR -->
			<%= image_tag "dummy-avatar.png" %>
		</div>
		<div class="span7">
			<strong><%= link_to shout.user.full_battle_tag, shout.user.battle_tag_name %></strong>
			<p><%= shout.content %> </p>


			<div class="meta">
				<%= link_to time_ago_in_words(shout.created_at) + " ago", shout %>
				<span class="admin">
					| <%= link_to 'Edit', edit_shout_path(shout) %> |
					<%= link_to 'Delete', shout, method: :delete, data: { confirm: "are you sure?"} %>
				</div>
			</div>
		</div>
	</div>

	<% end %>
